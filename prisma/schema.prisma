datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  // routes   Route[]
  // journal  Journal[]
  // gear     Gear[]
}

model Route {
  id             Int      @id @default(autoincrement())
  name           String
  grade          String
  description    String
  location       String
  protection     String
  date           DateTime
  routeCompleted Boolean  @default(false)
  // climber        User     @relation(fields: [climberId], references: [id])
  // climberId      Int      @default(autoincrement())
}

model Journal {
  id          Int      @id @default(autoincrement())
  entryName   String
  description String
  date        DateTime
  // climber     User     @relation(fields: [climberId], references: [id])
  // climberId   Int      @default(autoincrement())
}

model Gear {
  id         Int      @id @default(autoincrement())
  item       String
  dateBought DateTime
  // climber    User     @relation(fields: [climberId], references: [id])
  // climberId  Int      @default(autoincrement())
}
